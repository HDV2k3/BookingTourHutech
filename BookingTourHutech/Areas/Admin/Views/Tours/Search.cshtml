@{
    ViewData["Title"] = "Search";
}

<h2>Search Results</h2>

@if (Model.Count > 0)
{
    <div class="row">
        @foreach (var tour in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card product-card">
                    <img class="card-img-top product-image" src="~/images/@tour.ImageTour" alt="Product Image">
                    <div class="card-body product-details">
                        <h5 class="card-title product-title">@tour.TourName</h5>
                    </div>
                    <div class="card-footer product-actions">
                        <a asp-action="Details" asp-route-id="@tour.TourId" class="btn btn-info">View</a>
                        <a asp-action="Edit" asp-route-id="@tour.TourId" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@tour.TourId" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No tours found.</p>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


