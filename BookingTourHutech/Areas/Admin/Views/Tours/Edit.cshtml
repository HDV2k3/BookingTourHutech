@model BookingTourHutech.Models.Tour


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tour</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TourName" class="control-label"></label>
                <input asp-for="TourName" class="form-control" />
                <span asp-validation-for="TourName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TourDescription" class="control-label"></label>
                <input asp-for="TourDescription" class="form-control" />
                <span asp-validation-for="TourDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryTourId" class="control-label"></label>
                <select asp-for="CategoryTourId" class="form-control" asp-items="ViewBag.CategoryTours"></select>
                <span asp-validation-for="CategoryTourId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TourPrice" class="control-label"></label>
                <input asp-for="TourPrice" class="form-control" />
                <span asp-validation-for="TourPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageTour" class="control-label"></label>
                <input type="file" asp-for="ImageTour" class="form-control" />
                <span asp-validation-for="ImageTour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailTourDescription" class="control-label"></label>
                <input asp-for="DetailTourDescription" class="form-control" />
                <span asp-validation-for="DetailTourDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuplierId" class="control-label"></label>
                <select asp-for="SuplierId" class="form-control" asp-items="ViewBag.Supliers"></select>
                <span asp-validation-for="SuplierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary " />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

