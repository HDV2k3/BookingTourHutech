@using BookingTourHutech.ViewModels
@using PagedList
@model IEnumerable<BookingTourHutech.ViewModels.TourVM>


<section class="packages" id="packages">
    <div class="container">

        <div class="main-txt">
            <h1><span>G</span>ợi <Span>Ý</Span></h1>
        </div>
        <div class="row" style="margin-top: 30px;">
          @foreach(var item in Model)
            {
                <div class="col-md-4 py-3 py-md-0">

                    <div class="card">
                        <a asp-action="Detail" asp-controller="GoiY" asp-route-id="@item.TourId">
                            <img src="~/images/@item.ImageTour" class="img-fluid w-100 rounded-top" alt="@item.TourName">
                        </a>
                        <div class="card-body">
                            <h3>@item.TourName</h3>
                            <h4>@item.CategoryName</h4>
                            <p>@item.TourDescription</p>
                            <div class="star">
                                <i class="fa-solid fa-star checked"></i>
                                <i class="fa-solid fa-star checked"></i>
                                <i class="fa-solid fa-star checked"></i>
                                <i class="fa-solid fa-star "></i>
                                <i class="fa-solid fa-star "></i>
                            </div>
                            <h6>Giá: <strong>@item.TourPrice.ToString("#,##0.00")</strong></h6>
                            <a href="#" onclick="redirectToDetail()">Đặt Ngay</a>
                            <a href="#" onclick="redirectToDetail()">Chi Tiết</a>
                        </div>
                    </div>

                </div>
            }
        </div>
        <div class="pagination justify-content-center mt-3">
            <div class="row row-cols-auto d-flex">
                <div class="col-auto">
                    <span class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </span>
                </div>
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <div class="col-auto">
                        <span class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" style="background-color:#ffa500" href="@Url.Action("Index", new { page = i })">@i</a>
                        </span>
                    </div>
                }
                <div class="col-auto">
                    <span class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>
