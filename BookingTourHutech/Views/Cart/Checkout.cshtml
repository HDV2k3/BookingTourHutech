@model IEnumerable<BookingTourHutech.ViewModels.CartItem>
@{
	ViewData["Title"] = "Checkout";
}


<!-- Single Page Header End -->
<!-- Checkout Page Start -->
<div class="container-fluid py-5">
	<div class="container py-5">
		<h1 class="mb-4">Billing details</h1>
		<form asp-action="Checkout">
			<div class="row g-5">
				<form asp-action="Checkout" asp-controller="Cart">
					<div class="col-md-12 col-lg-6 col-xl-7">
					
						<div class="form-item delivery-info">
							<label class="form-label my-3">Tên Người Đặt Chuyến<sup>*</sup></label>
							<input type="text" name="FullName" class="form-control">
						</div>
						<div class="form-item delivery-info">
							<label class="form-label my-3">Địa Chỉ Lên Xe<sup>*</sup></label>
							<input type="text" name="Addresss" class="form-control" placeholder="hutech thủ đức">
						</div>
						<div class="form-item delivery-info">
							<label class="form-label my-3">Điện thoại<sup>*</sup></label>
							<input type="text" name="Phone" class="form-control">
						</div>
						<div class="form-item delivery-info">
							<label class="form-label my-3">CCCD<sup>*</sup></label>
							<input type="text" name="CCCD" class="form-control">
						</div>
						<div class="form-item delivery-info">
							<label class="form-label my-3">Email<sup>*</sup></label>
							<input type="text" name="Email" class="form-control">
						</div>
						<div class="form-item mt-3">
							<textarea name="Note" class="form-control" spellcheck="false" cols="30" rows="11" placeholder="Ghi chú"></textarea>
						</div>
						@* <button type="submit" class="btn border-secondary text-uppercase text-primary w-100 mt-2">Đặt hàng</button> *@
						<input type="submit" name="PaymentMethod" class="btn border-secondary text-uppercase text-primary w-100 mt-2" value="Thanh Toán Khi Đi">
					@* 	<input type="submit" name="CachThanhToan" class="btn border-secondary text-uppercase text-primary w-100 mt-2" value="Thanh Toán Momo"> *@
					</div>
				</form>
				<div class="col-md-12 col-lg-6 col-xl-5">
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th scope="col">Tour Name</th>
									<th scope="col">Price</th>
									<th scope="col">Quantity People</th>
									<th scope="col">Total</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
								
										<td class="py-5">@item.TourName</td>
										<td class="py-5">$@item.TourPrice</td>
										<td class="py-5">@item.QuantityPeopele</td>
										<td class="py-5">@item.TotalPriceTour</td>
									</tr>
								}
								<tr>
									<th scope="row">
									</th>
									<td class="py-5"></td>
									<td class="py-5"></td>
									<td class="py-5">
										<p class="mb-0 text-dark py-3">Tạm Tính</p>
										<p class="mb-0 text-dark">@Model.Sum(p => p.TotalPriceTour).ToString("#,##0.00")VND</p>
									</td>
									<td class="py-5">
										<div class="py-3 border-bottom border-top">
											@* 											<p class="mb-0 text-dark">@Model.Sum(p => p.ThanhTien).ToString("#,##0.00")VND</p>
											*@											<input type="hidden" name="TongTien" value="@Model.Sum(p => p.TotalPriceTour).ToString("#,##0.00")VND">
										</div>
									</td>
								</tr>
								<tr>
									<th scope="row">
									</th>
									<td class="py-5">
										<p class="mb-0 text-dark py-2">Hành Khách Sẽ Nhận Được số điện thoại của tài xế sau khi thanh toán</p>
									</td>
									
								</tr>
								<tr>
									<th scope="row">
									</th>
									<td class="py-5">
										<p class="mb-0 text-dark text-uppercase py-3">Total</p>
									</td>
									<td class="py-5"></td>
									<td class="py-5"></td>
									<td class="py-5">
										<div class="py-3 border-bottom border-top">
											<p class="mb-0 text-dark">@Model.Sum(p => p.TotalPriceTour).ToString("#,##0.00")VND</p>
										</div>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
					<p>Hình Thức Thanh Toán </p>
					<div class="row g-4 text-center align-items-center justify-content-center border-bottom py-3">
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
<!-- Checkout Page End -->

<script>
	$(document).ready(function () {
		$("#GiongKhachHang").change(function () {
			if ($(this).prop("checked")) {
				$(this).val(true);
				$(".delivery-info").addClass("d-none");
			} else {
				$(this).val(false);
				$(".delivery-info").removeClass("d-none");
			}
		});
	});


</script>
